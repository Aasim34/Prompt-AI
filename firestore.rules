/**
 * @fileoverview Firestore Security Rules for PromptForge AI.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for both user profiles and generated prompts.
 * Users can only read and write their own data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information.
 * - /users/{userId}/prompts/{promptId}: Stores prompts generated by each user.
 *
 * Key Security Decisions:
 * - Users can only access their own data.  Listing all users is disallowed.
 * - Schema enforcement is relaxed to allow rapid prototyping.
 * - Authorization is based on path matching to avoid costly `get()` calls.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile information.
     * @path /users/{userId}
     * @allow (create) - User with ID 'user123' can create their own profile.
     *   - request.auth.uid: 'user123'
     *   - request.resource.data.id: 'user123'
     * @allow (get, update, delete) - User with ID 'user123' can read, update, and delete their own profile.
     *   - request.auth.uid: 'user123'
     * @deny (create) - User with ID 'user456' cannot create a profile for 'user123'.
     *   - request.auth.uid: 'user456'
     *   - request.resource.data.id: 'user123'
     * @deny (update, delete) - User with ID 'user456' cannot update or delete the profile of 'user123'.
     *   - request.auth.uid: 'user456'
     * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to prompts generated by each user.
     * @path /users/{userId}/prompts/{promptId}
     * @allow (create) - User with ID 'user123' can create a prompt under their profile.
     *   - request.auth.uid: 'user123'
     * @allow (get, list, update, delete) - User with ID 'user123' can read, list, update, and delete their own prompts.
     *   - request.auth.uid: 'user123'
     * @deny (create) - User with ID 'user456' cannot create a prompt under 'user123' profile.
     *   - request.auth.uid: 'user456'
     * @deny (update, delete) - User with ID 'user456' cannot update or delete a prompt owned by 'user123'.
     *   - request.auth.uid: 'user456'
     * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
     */
    match /users/{userId}/prompts/{promptId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}